<body>

<div class="card">
<h1>QR Code Generator</h1>

<label>URL</label>
<input type="text" id="urlInput" placeholder="https://example.com">

<label>QR Color</label>
<input type="color" id="qrColor" value="#000000">

<label>Logo</label>
<input type="file" id="logoInput" accept="image/*">

<button class="generate-btn" onclick="generateQR()">Generate QR</button>
<button class="download-btn" onclick="downloadQR()">Download</button>

<div class="canvas-wrapper">
<canvas id="qrCanvas"></canvas>
</div>
</div>

<script>
let logoImg = null;

document.getElementById("logoInput").addEventListener("change", function(e){
    const file = e.target.files[0];
    if (!file) return;
    const img = new Image();
    img.src = URL.createObjectURL(file);
    img.onload = () => logoImg = img;
});

async function generateQR() {
    const url = document.getElementById("urlInput").value;
    const color = document.getElementById("qrColor").value;
    const canvas = document.getElementById("qrCanvas");

    if (!url) {
        alert("URL을 입력하세요");
        return;
    }

    await QRCode.toCanvas(canvas, url, {
        width: 380,
        errorCorrectionLevel: "H",
        color: {
            dark: color,
            light: "#ffffff"
        }
    });

    if (logoImg) {
        const ctx = canvas.getContext("2d");
        const logoSize = canvas.width / 4;
        const x = (canvas.width - logoSize) / 2;
        const y = (canvas.height - logoSize) / 2;

        ctx.fillStyle = "white";
        ctx.fillRect(x - 10, y - 10, logoSize + 20, logoSize + 20);
        ctx.drawImage(logoImg, x, y, logoSize, logoSize);
    }
}

function downloadQR() {
    const canvas = document.getElementById("qrCanvas");
    if (!canvas.width) return alert("먼저 QR을 생성하세요.");

    const link = document.createElement("a");
    link.download = "premium_qr.png";
    link.href = canvas.toDataURL();
    link.click();
}
</script>

